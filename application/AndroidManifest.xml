<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.application.trainsnooze"
    android:versionCode="2"
    android:versionName="1.0" >

    <uses-permission
            android:name="android.permission.ACCESS_COARSE_LOCATION"
            />

    <uses-permission
            android:name="android.permission.ACCESS_FINE_LOCATION"
            />

    <uses-permission android:name="android.permission.INTERNET"
            />

    <uses-permission android:name="android.permission.VIBRATE"
            />
    
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"
            />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:name="com.application.trainsnooze.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
                android:name=".BackgroundService"
                android:label="BackgroundServiceApp"/>
        <activity
                android:name="com.application.trainsnooze.WakeAppPreferences"
                android:label="@string/app_name" ></activity>
        <activity
            	android:theme="@android:style/Theme.NoTitleBar.Fullscreen"	
            	android:screenOrientation="portrait"
            	android:name="com.application.trainsnooze.AlarmReceiverActivity"
            	android:label="@string/app_name"></activity>
        <activity
            	android:name="com.google.ads.AdActivity"
				android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"></activity>
    </application>

</manifest>
